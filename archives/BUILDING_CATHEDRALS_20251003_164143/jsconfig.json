{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@engines/*": ["engines/*"],
      "@data/*": ["data/*"],
      "@tools/*": ["tools/*"],
      "@packages/*": ["packages/*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "**/*.js",
    "**/*.jsx", 
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["dist", "node_modules", ".git", "build"]
}
