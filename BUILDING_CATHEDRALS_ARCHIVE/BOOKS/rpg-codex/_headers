# Cloudflare Pages Configuration for RPG Codex

# Build settings
[build]
  command = "echo 'Building RPG Codex...' && npm run build"
  publish = "."
  
[build.environment]
  NODE_VERSION = "18"
  NPM_VERSION = "9"

# Custom headers for better performance
[[headers]]
  for = "/*.html"
  [headers.values]
    Cache-Control = "public, max-age=300"
    X-Content-Type-Options = "nosniff"
    X-Frame-Options = "DENY"
    X-XSS-Protection = "1; mode=block"
    Referrer-Policy = "strict-origin-when-cross-origin"

[[headers]]
  for = "/assets/*"
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"

[[headers]]
  for = "/*.css"
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"
    Content-Type = "text/css; charset=utf-8"

[[headers]]
  for = "/*.js"
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"
    Content-Type = "application/javascript; charset=utf-8"

# Redirects for SEO-friendly URLs
[[redirects]]
  from = "/character-creation"
  to = "/index.html#character-creation"
  status = 200

[[redirects]]
  from = "/combat"
  to = "/index.html#combat"
  status = 200

[[redirects]]
  from = "/magic"
  to = "/index.html#magic"
  status = 200

[[redirects]]
  from = "/setting"
  to = "/index.html#setting"
  status = 200

# Functions for dynamic content (Cloudflare Workers)
[[functions]]
  function = "art-generator"
  path = "/api/generate-art"

[[functions]]
  function = "dice-roller"
  path = "/api/roll-dice"

[[functions]]
  function = "character-generator"
  path = "/api/generate-character"