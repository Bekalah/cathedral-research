  // Terminal Sacred Environment
  "terminal.integrated.fontFamily": "'Atkinson Hyperlegible', 'JetBrains Mono', monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1.4,
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  
  // Git Sacred Workflow
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  
  // Zen Mode for Deep Sacred Work
  "zenMode.fullScreen": false,
  "zenMode.hideActivityBar": true,
  "zenMode.hideStatusBar": false,
  "zenMode.hideTabs": true,
  "zenMode.centerLayout": true,
  "zenMode.restore": true,
  
  // Sacred Search Configuration
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.git": true,
    "**/archive": true,
    "**/deprecated-names": true
  },
  
  // Sacred Workspace Trust
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.banner": "never",
  
  // Sacred Performance Optimizations
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.hg/store/**": true
  },
  
  // Sacred Accessibility
  "accessibility.signals.lineHasError": {
    "sound": "on"
  },
  "accessibility.signals.lineHasWarning": {
    "sound": "on"  
  },
  "workbench.reduceMotion": "auto",
  "editor.accessibilitySupport": "auto",
  
  // Sacred Development Hints
  "editor.inlayHints.enabled": "on",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "javascript.inlayHints.parameterNames.enabled": "all"
}