{
  "name": "@cathedral/liber-arcanae-modular",
  "version": "4.0.0",
  "description": "Modular Tarot System with p5.js integration, Codex 144:99 mathematics, and real dataset connections",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./modules/*": {
      "types": "./dist/modules/*.d.ts",
      "import": "./dist/modules/*.esm.js",
      "require": "./dist/modules/*.js"
    }
  },
  "scripts": {
    "dev": "vite --host --port 3002",
    "build": "pnpm run build:clean && vite build && tsc --emitDeclarationOnly",
    "build:clean": "rimraf dist",
    "preview": "vite preview --port 3002",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "demo": "vite --open /demo/ --port 3002",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "tarot:generate": "node scripts/generate-tarot-music.js",
    "arcana:synthesize": "node scripts/synthesize-arcana.js",
    "export:professional": "node scripts/export-tarot-audio.js"
  },
  "dependencies": {
    "@cathedral/p5-codex-engine": "workspace:*",
    "@cathedral/synth-lab-pro": "workspace:*",
    "p5": "^1.7.0",
    "chroma-js": "^2.4.2",
    "tone": "^14.7.77",
    "howler": "^2.2.4",
    "pizzicato": "^0.6.4",
    "tonal": "^5.0.0",
    "teoria": "^2.5.0",
    "ml5": "^0.12.2",
    "@magenta/music": "^1.3.1",
    "webmidi": "^3.1.8",
    "midi-writer-js": "^3.1.0"
  },
  "devDependencies": {
    "@types/p5": "^1.7.6",
    "@types/chroma-js": "^2.4.4",
    "vite": "^7.1.9",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
