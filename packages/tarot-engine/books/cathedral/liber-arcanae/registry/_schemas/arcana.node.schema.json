{
  "$id": "arcana.node.schema.json",
  "schema_version": "1.0.0",
  "type": "object",
  "required": ["id", "name", "rank", "suit", "element", "numerology", "resonances", "provenance"],
  "properties": {
    "id": { "type": "string", "description": "Canonical card id (e.g., 'XIII', 'Cups-7')" },
    "name": { "type": "string" },
    "rank": { "type": "string", "enum": ["Major", "Minor"] },
    "suit": { "type": ["string", "null"], "enum": ["Wands","Cups","Swords","Pentacles",null] },
    "element": { "type": "string", "enum": ["Fire","Water","Air","Earth","Aether"] },
    "stage": { "type": "string", "enum": ["Nigredo","Albedo","Citrinitas","Rubedo","Void"] },
    "numerology": { "type": "integer" },
    "lineage_card": { "type": "boolean", "description": "If this card can be chosen as a player lineage/patron" },
    "resonances": {
      "type": "object",
      "required": ["planet","zodiac","degree","color_lab","angel","daemon","gate"],
      "properties": {
        "planet": { "type": "string" },
        "zodiac": { "type": "string" },
        "degree": { "type": "number", "description": "0–360°, maps to Codex spiral" },
        "color_lab": { "type": "string", "description": "L*a*b* CSS-like token or palette key" },
        "angel": { "type": "string" },
        "daemon": { "type": "string" },
        "gate": { "type": "string", "description": "Da'ath/abyss/temple reference" }
      }
    },
    "progression": {
      "type": "object",
      "properties": {
        "unlocks": { "type": "array", "items": { "type": "string" } },
        "skill_trees": { "type": "array", "items": { "type": "string" } }
      }
    },
    "quests": {
      "type": "array",
      "items": { "type": "string", "description": "Quest template ids bound to this card" }
    },
    "art_style": { "type": "string" },
    "living": {
      "type": "object",
      "properties": {
        "book_roles": { "type": "array", "items": { "type": "string" }, "description": "Which Living Book sections this card infuses (e.g., 'Chapter:Descent', 'Appendix:Seals')" },
        "library_nodes": { "type": "array", "items": { "type": "string" }, "description": "IDs of living library entries that this card unlocks or colors" },
        "cathedral_zones": { "type": "array", "items": { "type": "string" }, "description": "IDs of environment zones (e.g., 'crypt', 'fifth-temple', 'rose-choir')" },
        "art_realms": { "type": "array", "items": { "type": "string" }, "description": "IDs of art realms / ateliers this Arcana infuses (e.g., 'obsidian-mandala')" },
        "temple_functions": { "type": "array", "items": { "type": "string" }, "description": "ritual/functional modes e.g., ['healing','initiation','alchemy']" },
        "reiki_grid_tokens": { "type": "object", "additionalProperties": { "type": "number" }, "description": "Aka Dua / Reiki frequency tokens mapping (symbolic numeric weights)" },
        "atelier_exercises": { "type": "array", "items": { "type": "string" }, "description": "Study modules in the atelier this card triggers (e.g., 'breathwork-1','mandala-lab')" },
        "interaction_model": { "type": "string", "enum": ["solo","paired","group","global"], "description": "how the living effect is experienced" }
      }
    },
    "provenance": {
      "type": "object",
      "required": ["source_refs"],
      "properties": {
        "source_refs": { "type": "array", "items": { "type": "string" } },
        "notes": { "type": "string" }
      }
    }
  }
}