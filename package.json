{
  "name": "@bekalah/cathedral-universe",
  "version": "4.0.0-unified",
  "description": "üèõÔ∏è Cathedral Universe - Immersive Creative Platform where consciousness becomes sacred space",
  "type": "module",
  "private": true,
  "author": "Rebecca Lemke <rebecca@bekalah.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bekalah/bekalah.github.io.git"
  },
  "homepage": "https://bekalah.github.io",
  "workspaces": [
    "apps/*",
    "packages/*",
    "games/*",
    "tools/*",
    "shared/*"
  ],
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm run dev:universe",
    "dev:universe": "concurrently \"pnpm run dev:hub\" \"pnpm run dev:studio\" \"pnpm run dev:lab\"",
    "dev:hub": "pnpm --filter cathedral-hub dev",
    "dev:cathedral": "pnpm --filter cathedral-of-circuits dev",
    "dev:grimoire": "pnpm --filter stone-grimoire dev",
    "dev:lab": "pnpm --filter arcanae-lab dev",
    "dev:studio": "pnpm --filter synth-art-studio dev",
    "dev:cosmogenesis": "pnpm --filter cosmogenesis-engine dev",
    "dev:cyoa": "pnpm --filter cyoa-engine dev",
    "dev:all": "pnpm run --parallel dev:*",
    
    "build": "pnpm run build:clean && pnpm run build:packages && pnpm run build:apps && pnpm run build:universe",
    "build:clean": "rimraf apps/*/dist packages/*/dist shared/*/dist gh-pages-deployment",
    "build:packages": "pnpm run --parallel --filter './packages/*' build",
    "build:shared": "pnpm run --parallel --filter './shared/*' build", 
    "build:apps": "pnpm run --parallel --filter './apps/*' build",
    "build:universe": "node tools/build-universe.js",
    "build:verify": "echo '‚ú® Cathedral Universe build complete - immersive experience ready'",
    
    "deploy": "pnpm run deploy:universe",
    "deploy:universe": "pnpm run build && node tools/deploy-universe.js",
    "deploy:prepare": "node tools/prepare-immersive-deployment.js",
    "deploy:github": "gh-pages -d gh-pages-deployment -m 'Deploy Cathedral Universe - Immersive Creative Platform'",
    
    "universe:sync": "node tools/universe-sync.js",
    "universe:quality": "node tools/quality-assurance.js",
    "universe:style-check": "node tools/style-verification.js",
    
    "p5:codex": "pnpm --filter p5-codex-engine dev",
    "liber:arcanae": "pnpm --filter liber-arcanae dev",
    "datasets:connect": "node tools/dataset-connectors.js",
    "art:generate": "node tools/professional-art-generator.js",
    
    "quality:immersive": "pnpm run style:verify && pnpm run accessibility:check && pnpm run performance:audit",
    "style:verify": "node tools/style-system-validator.js",
    "accessibility:check": "pa11y-ci --sitemap https://bekalah.github.io/sitemap.xml",
    "performance:audit": "lighthouse-ci autorun",
    
    "lint": "pnpm run --parallel lint",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,css,scss,md}\"",
    "type-check": "pnpm run --parallel type-check",
    "test": "pnpm run --parallel test",
    "test:universe": "jest --projects apps packages shared",
    "test:watch": "pnpm run --parallel test:watch",
    "test:coverage": "pnpm run --parallel test:coverage",
    
    "clean": "pnpm run --parallel clean && rimraf node_modules/.cache gh-pages-deployment",
    "upgrade": "pnpm update --latest",
    "analyze": "pnpm run build && pnpm run analyze:bundle",
    "analyze:bundle": "webpack-bundle-analyzer dist/stats.json",
    "serve": "serve gh-pages-deployment -l 3000",
    "start": "pnpm run serve",
    "preview": "pnpm run build && pnpm run start",
    "postinstall": "husky install",
    "install:all": "pnpm install --recursive"
  },
  "dependencies": {
    "@react-three/drei": "^9.122.0",
    "@react-three/fiber": "^8.18.0",
    "@react-three/postprocessing": "^2.15.11",
    "@types/three": "^0.169.0",
    "@use-gesture/react": "^10.3.0",
    "axios": "^1.6.0",
    "cannon-es": "^0.20.0",
    "chroma-js": "^2.4.2",
    "comlink": "^4.4.1",
    "date-fns": "^2.30.0",
    "eventemitter3": "^5.0.1",
    "framer-motion": "^10.16.5",
    "fs-extra": "^11.2.0",
    "gsap": "^3.12.2",
    "howler": "^2.2.4",
    "immer": "^10.0.3",
    "leva": "^0.9.35",
    "lodash-es": "^4.17.21",
    "p5": "^1.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.18.0",
    "socket.io-client": "^4.7.4",
    "three": "^0.169.0",
    "three-stdlib": "^2.27.0",
    "tone": "^14.7.77",
    "uuid": "^9.0.1",
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "zustand": "^4.4.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@types/chroma-js": "^2.4.4",
    "@types/lodash-es": "^4.17.12",
    "@types/p5": "^1.7.6",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitejs/plugin-react": "^4.1.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "gh-pages": "^6.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse-ci": "^1.13.1",
    "lint-staged": "^15.1.0",
    "npm-check-updates": "^16.14.11",
    "pa11y-ci": "^3.0.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "serve": "^14.2.1",
    "typescript": "^5.3.3",
    "vite": "^7.1.9",
    "vite-plugin-glsl": "^1.1.2",
    "vite-plugin-pwa": "^0.17.4",
    "vite-plugin-wasm": "^3.2.2",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pnpm run style:verify",
      "pre-push": "pnpm run test:universe && pnpm run quality:immersive"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/shared/testing/setupTests.js"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@packages/(.*)$": "<rootDir>/packages/$1",
      "^@apps/(.*)$": "<rootDir>/apps/$1",
      "^@shared/(.*)$": "<rootDir>/shared/$1"
    },
    "projects": [
      {
        "displayName": "packages",
        "testMatch": ["<rootDir>/packages/**/src/**/*.test.{js,ts,tsx}"]
      },
      {
        "displayName": "apps", 
        "testMatch": ["<rootDir>/apps/**/src/**/*.test.{js,ts,tsx}"]
      },
      {
        "displayName": "shared",
        "testMatch": ["<rootDir>/shared/**/src/**/*.test.{js,ts,tsx}"]
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead", 
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
