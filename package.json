    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.1",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lighthouse-ci": "^1.13.1",
    "lint-staged": "^16.2.3",
    "npm-check-updates": "^19.0.0",
    "pa11y-ci": "^4.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "sass": "^1.93.2",
    "serve": "^14.2.5",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-plugin-glsl": "^1.5.4",
    "vite-plugin-pwa": "^1.0.3",
    "vite-plugin-wasm": "^3.5.0",
    "webpack-bundle-analyzer": "^4.10.2"
    "lint-staged": "^15.1.0",
    "npm-check-updates": "^16.14.11",
    "pa11y-ci": "^3.0.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "serve": "^14.2.1",
    "typescript": "^5.3.3",
    "vite": "^7.1.9",
    "vite-plugin-glsl": "^1.1.2",
    "vite-plugin-pwa": "^0.17.4",
    "vite-plugin-wasm": "^3.2.2",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pnpm run style:verify",
      "pre-push": "pnpm run test:universe && pnpm run quality:immersive"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/shared/testing/setupTests.js"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@packages/(.*)$": "<rootDir>/packages/$1",
      "^@apps/(.*)$": "<rootDir>/apps/$1",
      "^@shared/(.*)$": "<rootDir>/shared/$1"
    },
    "projects": [
      {
        "displayName": "packages",
        "testMatch": [
          "<rootDir>/packages/**/src/**/*.test.{js,ts,tsx}"
        ]
      },
      {
        "displayName": "apps",
        "testMatch": [
          "<rootDir>/apps/**/src/**/*.test.{js,ts,tsx}"
        ]
      },
      {
        "displayName": "shared",
        "testMatch": [
          "<rootDir>/shared/**/src/**/*.test.{js,ts,tsx}"
        ]
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
