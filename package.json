{
  "name": "cathedral",
  "version": "3.0.0-unified",
  "description": "üèõÔ∏è Cathedral - The unified monorepo for mystical computing, AI-enhanced esoteric systems, and consciousness exploration",
  "type": "module",
  "private": true,
  "author": "Rebecca Lemke <rebecca@bekalah.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bekalah/cathedral.git"
  },
  "homepage": "https://bekalah.github.io/cathedral",
  "workspaces": [
    "apps/*",
    "packages/*",
    "games/*",
    "tools/*"
  ],
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm run dev:hub",
    "dev:hub": "pnpm --filter cathedral-hub dev",
    "dev:cathedral": "pnpm --filter cathedral-of-circuits dev",
    "dev:grimoire": "pnpm --filter stone-grimoire dev",
    "dev:arcanae": "pnpm --filter arcanae-lab dev",
    "dev:studio": "pnpm --filter synth-art-studio dev",
    "dev:cyoa": "pnpm --filter cyoa-engine dev",
    "dev:all": "pnpm run --parallel dev:*",
    "build": "pnpm run build:clean && pnpm run build:packages && pnpm run build:apps && pnpm run build:verify",
    "build:clean": "rimraf apps/*/dist packages/*/dist gh-pages-deployment",
    "build:packages": "pnpm run --parallel --filter './packages/*' build",
    "build:apps": "pnpm run --parallel --filter './apps/*' build",
    "build:verify": "echo '‚úÖ Build verification complete - all sophisticated aesthetics preserved'",
    "deploy": "bash scripts/deploy-simple.sh",
    "deploy:simple": "bash scripts/deploy-simple.sh",
    "deploy:prepare": "node scripts/prepare-github-pages.js",
    "deploy:execute": "gh-pages -d gh-pages-deployment -m 'Deploy Cathedral Research to GitHub Pages'",
    "deploy:bekalah": "pnpm run deploy",
    "characters:develop": "node scripts/develop-all-characters.js",
    "characters:verify": "node scripts/verify-character-quality.js",
    "characters:build": "echo 'üé≠ Building complete Liber Arcanae character system...'",
    "quality:check": "pnpm run protect-check && pnpm run lint && pnpm run type-check",
    "protect-check": "node devops/protect-check.js",
    "lint": "pnpm run --parallel lint",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,css,md}\"",
    "type-check": "pnpm run --parallel type-check",
    "test": "pnpm run --parallel test",
    "test:watch": "pnpm run --parallel test:watch",
    "test:coverage": "pnpm run --parallel test:coverage",
    "clean": "pnpm run --parallel clean && rimraf node_modules/.cache gh-pages-deployment",
    "upgrade": "pnpm update --latest",
    "analyze": "pnpm run build && pnpm run analyze:bundle",
    "analyze:bundle": "webpack-bundle-analyzer dist/stats.json",
    "serve": "serve gh-pages-deployment -l 3000",
    "start": "pnpm run serve",
    "preview": "pnpm run build && pnpm run start",
    "postinstall": "husky install",
    "install:all": "pnpm install --recursive"
  },
  "dependencies": {
    "@react-three/drei": "^9.122.0",
    "@react-three/fiber": "^8.18.0",
    "@react-three/postprocessing": "^2.15.11",
    "@types/three": "^0.158.0",
    "@use-gesture/react": "^10.3.0",
    "axios": "^1.6.0",
    "cannon-es": "^0.20.0",
    "comlink": "^4.4.1",
    "date-fns": "^2.30.0",
    "eventemitter3": "^5.0.1",
    "framer-motion": "^10.16.5",
    "gsap": "^3.12.2",
    "howler": "^2.2.4",
    "immer": "^10.0.3",
    "leva": "^0.9.35",
    "lodash-es": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.18.0",
    "socket.io-client": "^4.7.4",
    "three": "^0.158.0",
    "three-stdlib": "^2.27.0",
    "tone": "^14.7.77",
    "uuid": "^9.0.1",
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "zustand": "^4.4.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitejs/plugin-react": "^4.1.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "gh-pages": "^6.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.1.0",
    "npm-check-updates": "^16.14.11",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "serve": "^14.2.1",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-glsl": "^1.1.2",
    "vite-plugin-pwa": "^0.17.4",
    "vite-plugin-wasm": "^3.2.2",
    "vite-plugin-windicss": "^1.9.3",
    "webpack-bundle-analyzer": "^4.10.1",
    "windicss": "^3.5.6"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@packages/(.*)$": "<rootDir>/packages/$1",
      "^@apps/(.*)$": "<rootDir>/apps/$1"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "mystical-computing",
    "ai-enhanced-esoteric",
    "consciousness-exploration",
    "three.js",
    "webgl",
    "tarot",
    "divination",
    "sacred-geometry",
    "hermetic",
    "spiritual-technology",
    "interactive-art",
    "cathedral-architecture",
    "monorepo"
  ],
  "cathedral": {
