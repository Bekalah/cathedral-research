{
  "name": "cathedral-research-monorepo",
  "version": "2.1.0-cathedral",
  "description": "üèõÔ∏è Cathedral Research - Unified monorepo for mystical computing, AI-enhanced esoteric systems, and consciousness exploration",
  "type": "module",
  "private": true,
  "author": "Rebecca Lemke <rebecca@bekalah.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bekalah/cathedral-research.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "games/*",
    "tools/*"
  ],
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:*\"",
    "dev:hub": "cd apps/cathedral-hub && npm run dev",
    "dev:cathedral": "vite --config apps/cathedral-of-circuits/vite.config.js",
    "dev:liber": "vite --config apps/liber-arcanae/vite.config.js",
    "dev:grimoire": "vite --config apps/stone-grimoire/vite.config.js",
    "dev:mystery": "vite --config apps/magical-mystery-house/vite.config.js",
    "dev:game": "vite --config games/liber-arcanae/vite.config.js",
    "build": "npm run build:packages && npm run build:apps && npm run build:games",
    "build:packages": "npm run build:three-engine && npm run build:tesseract && npm run build:codex",
    "build:three-engine": "cd packages/three-engine && npm run build",
    "build:tesseract": "cd packages/tesseract-bridge && npm run build",
    "build:codex": "cd packages/codex-engine && npm run build",
    "build:apps": "concurrently \"npm run build:hub\" \"npm run build:cathedral\" \"npm run build:liber\" \"npm run build:grimoire\" \"npm run build:mystery\"",
    "build:hub": "cd apps/cathedral-hub && npm run build",
    "build:cathedral": "cd apps/cathedral-of-circuits && npm run build",
    "build:liber": "cd apps/liber-arcanae && npm run build",
    "build:grimoire": "cd apps/stone-grimoire && npm run build",
    "build:mystery": "cd apps/magical-mystery-house && npm run build",
    "build:games": "cd games/liber-arcanae && npm run build",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "protect-check": "node devops/protect-check.js",
    "deploy": "npm run build && npm run deploy:github-pages",
    "deploy:github-pages": "gh-pages -d dist",
    "clean": "rimraf dist && rimraf node_modules/.cache",
    "upgrade": "npm-check-updates -u && npm install",
    "analyze": "npm run build && npm run analyze:bundle",
    "analyze:bundle": "webpack-bundle-analyzer dist/stats.json",
    "serve": "serve dist -l 3000",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@types/three": "^0.158.0",
    "three": "^0.158.0",
    "three-stdlib": "^2.27.0",
    "@react-three/fiber": "^8.15.11",
    "@react-three/drei": "^9.88.17",
    "@react-three/postprocessing": "^2.15.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.18.0",
    "zustand": "^4.4.6",
    "immer": "^10.0.3",
    "framer-motion": "^10.16.5",
    "leva": "^0.9.35",
    "gsap": "^3.12.2",
    "cannon-es": "^0.20.0",
    "@use-gesture/react": "^10.3.0",
    "tone": "^14.7.77",
    "howler": "^2.2.4",
    "socket.io-client": "^4.7.4",
    "axios": "^1.6.0",
    "date-fns": "^2.30.0",
    "uuid": "^9.0.1",
    "lodash-es": "^4.17.21",
    "eventemitter3": "^5.0.1",
    "comlink": "^4.4.1",
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/uuid": "^9.0.7",
    "@types/lodash-es": "^4.17.12",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitejs/plugin-react": "^4.1.1",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-glsl": "^1.1.2",
    "vite-plugin-wasm": "^3.2.2",
    "vite-plugin-pwa": "^0.17.4",
    "vite-plugin-windicss": "^1.9.3",
    "windicss": "^3.5.6",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.4",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "serve": "^14.2.1",
    "gh-pages": "^6.1.0",
    "npm-check-updates": "^16.14.11",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/src/setupTests.js"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@packages/(.*)$": "<rootDir>/packages/$1",
      "^@apps/(.*)$": "<rootDir>/apps/$1"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "mystical-computing",
    "ai-enhanced-esoteric",
    "consciousness-exploration",
    "three.js",
    "webgl",
    "tarot",
    "divination",
    "sacred-geometry",
    "hermetic",
    "spiritual-technology",
    "interactive-art",
    "cathedral-architecture",
    "monorepo"
  ],
  "cathedral": {
    "version": "2.1.0-cathedral",
    "codename": "Cathedral Hub Integration",
    "release_date": "2025-10-05",
    "major_features": [
      "Cathedral Hub central navigation portal",
      "Complete DevOps protect system",
      "Multi-platform deployment pipeline",
      "Enhanced TypeScript configuration",
      "Comprehensive app registry system"
    ],
    "systems": {
      "core": ["three-engine", "codex-14499", "tesseract-bridge"],
      "applications": ["cathedral-hub", "cathedral-of-circuits", "stone-grimoire", "arcanae-lab", "magical-mystery-house"],
      "packages": ["audio-engine", "art-engine", "codex-engine", "synthesis-engine"],
      "tools": ["protect-check", "deployment-scripts"],
      "infrastructure": ["registry", "devops", "workflows"]
    },
    "features": {
      "trauma-aware-design": true,
      "accessibility-compliant": true,
      "webgl-accelerated": true,
      "pwa-enabled": true,
      "offline-capable": true,
      "mobile-responsive": true
    },
    "deployment": {
      "target": "github-pages",
      "domain": "bekalah.github.io/cathedral-research",
      "cdn": "jsdelivr",
      "analytics": "google-analytics-4"
    }
  }
}
