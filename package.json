{
  "name": "@bekalah/cathedral-universe",
  "version": "4.0.0-unified",
  "description": "üèõÔ∏è Cathedral Universe - Immersive Creative Platform where consciousness becomes sacred space",
  "type": "module",
  "private": true,
  "author": "Rebecca Lemke <rebecca@bekalah.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bekalah/bekalah.github.io.git"
  },
  "homepage": "https://bekalah.github.io",
  "workspaces": [
    "apps/*",
    "packages/*",
    "games/*",
    "tools/*",
    "shared/*"
  ],
  "packageManager": "bun@1.2.23",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.2.0"
  },
  "scripts": {
    "dev": "bun run dev:universe",
    "dev:universe": "concurrently \"bun run dev:hub\" \"bun run dev:studio\" \"bun run dev:lab\"",
    "dev:hub": "bun --filter cathedral-hub dev",
    "dev:cathedral": "bun --filter cathedral-of-circuits dev",
    "dev:grimoire": "bun --filter stone-grimoire dev",
    "dev:lab": "bun --filter arcanae-lab dev",
    "dev:studio": "bun --filter synth-art-studio dev",
    "dev:cosmogenesis": "bun --filter cosmogenesis-engine dev",
    "dev:cyoa": "bun --filter cyoa-engine dev",
    "dev:all": "bun run --parallel dev:*",
    "build": "bun run build:clean && bun run build:packages && bun run build:apps && bun run build:universe",
    "build:clean": "rimraf apps/*/dist packages/*/dist shared/*/dist gh-pages-deployment",
    "build:packages": "bun run --parallel --filter './packages/*' build",
    "build:shared": "bun run --parallel --filter './shared/*' build",
    "build:apps": "bun run --parallel --filter './apps/*' build",
    "build:universe": "bun tools/build-universe.js",
    "build:verify": "echo '‚ú® Cathedral Universe build complete - immersive experience ready'",
    "deploy": "bun run deploy:universe",
    "deploy:universe": "bun run build && bun tools/deploy-universe.js",
    "deploy:prepare": "bun tools/prepare-immersive-deployment.js",
    "deploy:github": "gh-pages -d gh-pages-deployment -m 'Deploy Cathedral Universe - Immersive Creative Platform'",
    "universe:sync": "bun tools/universe-sync.js",
    "universe:quality": "bun tools/quality-assurance.js",
    "universe:style-check": "bun tools/style-verification.js",
    "p5:codex": "bun --filter p5-codex-engine dev",
    "liber:arcanae": "bun --filter liber-arcanae dev",
    "datasets:connect": "bun tools/dataset-connectors.js",
    "art:generate": "bun tools/professional-art-generator.js",
    "quality:immersive": "bun run style:verify && bun run accessibility:check && bun run performance:audit",
    "style:verify": "bun tools/style-system-validator.js",
    "accessibility:check": "pa11y-ci --sitemap https://bekalah.github.io/sitemap.xml",
    "performance:audit": "lighthouse-ci autorun",
    "lint": "bun run --parallel lint",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,css,scss,md}\"",
    "type-check": "bun run --parallel type-check",
    "test": "bun run --parallel test",
    "test:universe": "jest --projects apps packages shared",
    "test:watch": "bun run --parallel test:watch",
    "test:coverage": "bun run --parallel test:coverage",
    "clean": "bun run --parallel clean && rimraf node_modules/.cache gh-pages-deployment",
    "upgrade": "bun update --latest",
    "analyze": "bun run build && bun run analyze:bundle",
    "analyze:bundle": "webpack-bundle-analyzer dist/stats.json",
    "serve": "serve gh-pages-deployment -l 3000",
    "start": "bun run serve",
    "preview": "bun run build && bun run start",
    "postinstall": "husky install",
    "install:all": "bun install --recursive",
    "bun:install": "bun install",
    "bun:add": "bun add",
    "bun:remove": "bun remove",
    "bun:update": "bun update"
  },
  "dependencies": {
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.3.0",
    "@react-three/postprocessing": "^3.0.4",
