        "registry",
        "devops",
        "workflows"
      ]
    },
    "features": {
      "trauma-aware-design": true,
      "accessibility-compliant": true,
      "webgl-accelerated": true,
      "pwa-enabled": true,
      "offline-capable": true,
      "mobile-responsive": true
    },
    "deployment": {
      "target": "bekalah.github.io",
      "path": "/cathedral-research",
      "domain": "bekalah.github.io/cathedral-research",
      "cdn": "jsdelivr",
      "analytics": "google-analytics-4",
      "character_system": "complete_22_major_arcana",
      "art_standards": "ernst_fuchs_alex_grey_integration",
      "quality_level": "museum_grade"
    }
  }
}
