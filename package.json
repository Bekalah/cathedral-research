    "fs-extra": "^11.3.2",
    "gsap": "^3.13.0",
    "howler": "^2.2.4",
    "immer": "^10.1.3",
    "leva": "^0.10.0",
    "lodash-es": "^4.17.21",
    "p5": "^2.0.5",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.3",
    "socket.io-client": "^4.8.1",
    "three": "^0.180.0",
    "three-stdlib": "^2.36.0",
    "tone": "^15.1.22",
    "uuid": "^13.0.0",
    "workbox-precaching": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
